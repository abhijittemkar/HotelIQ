<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6DEFF"
    tools:context=".ui.home.HomeFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/my_pager"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/mainimage" >

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />
    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/my_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:background="@color/ic_launcher_background"
        app:tabBackground="@drawable/indicator_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <ImageButton
        android:id="@+id/imageView3"
        android:layout_width="151dp"
        android:layout_height="126dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="296dp"
        android:background="@drawable/cust" />

    <ImageButton
        android:id="@+id/imageView6"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="508dp"
        android:background="@drawable/staf" />

    <ImageButton
        android:id="@+id/imageView7"
        android:layout_width="139dp"
        android:layout_height="129dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="508dp"
        android:background="@drawable/view" />

    <Button
        android:id="@+id/button"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="432dp"
        android:text="ADD" />

    <Button
        android:id="@+id/View"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="636dp"
        android:text="View" />

    <Button
        android:id="@+id/employeeadd"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="636dp"
        android:text="ADD" />

    <Button
        android:id="@+id/Rbtn"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="432dp"
        android:text=" Room"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="153dp"
        android:layout_height="150dp"

        android:layout_marginLeft="28dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@id/imageView3"
        android:background="@drawable/roombacklg" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginTop="230dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="____________________________"
        android:textAlignment="center"
        android:textColor="@color/black" />


</RelativeLayout>